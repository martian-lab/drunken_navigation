<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.martianlab.drunkennavigation.MainActivity">

        <fragment android:name="com.martianlab.drunkennavigation.QRScanFragment"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:id="@+id/container"
                  app:layout_constraintVertical_weight="6"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/container2"
        />

        <fragment android:name="com.martianlab.drunkennavigation.ListFragment"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:id="@+id/container2"
                  app:layout_constraintVertical_weight="6"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/container"/>

</androidx.constraintlayout.widget.ConstraintLayout>